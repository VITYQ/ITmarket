<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.order.OrderFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="200dp"
        android:clipToPadding="false">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:clipToPadding="false">

                <TextView
                    android:id="@+id/tv_header_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Адрес"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Коллонтай"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_street" />

                <TextView
                    android:id="@+id/tv_header_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="40dp"
                    android:text="Дом"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_header_building"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_street" />

                <TextView
                    android:id="@+id/tv_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    app:layout_constraintStart_toStartOf="@+id/tv_header_house"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_house" />

                <TextView
                    android:id="@+id/tv_header_building"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginEnd="41dp"
                    android:text="Корпус"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_header_house"
                    app:layout_constraintEnd_toStartOf="@+id/tv_header_door"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_header_house"
                    app:layout_constraintTop_toTopOf="@+id/tv_header_house" />


                <TextView
                    android:id="@+id/tv_building"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    app:layout_constraintStart_toStartOf="@+id/tv_header_building"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_house" />


                <TextView
                    android:id="@+id/tv_header_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginEnd="41dp"
                    android:text="Подъезд"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_header_building"
                    app:layout_constraintEnd_toStartOf="@+id/tv_header_floor"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_header_building"
                    app:layout_constraintTop_toTopOf="@+id/tv_header_house" />

                <TextView
                    android:id="@+id/tv_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    app:layout_constraintStart_toStartOf="@+id/tv_header_door"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_house" />

                <TextView
                    android:id="@+id/tv_header_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Этаж"
                    android:layout_marginEnd="8dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_header_door"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_header_door"
                    app:layout_constraintTop_toTopOf="@+id/tv_header_door" />

                <TextView
                    android:id="@+id/tv_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    app:layout_constraintStart_toStartOf="@+id/tv_header_floor"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_house" />


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#EEE"
                    app:layout_constraintTop_toBottomOf="@+id/tv_building" />


                <TextView
                    android:id="@+id/tv_header_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Номер заказа"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />


                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="№494735965"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_order" />

                <TextView
                    android:id="@+id/tv_header_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Услуга"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="Туалетный утенок"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_service" />


                <TextView
                    android:id="@+id/tv_header_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="Дата"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_service" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="12.03.2012"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_date" />

                <TextView
                    android:id="@+id/tv_header_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:text="Время"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_date"
                    app:layout_constraintTop_toBottomOf="@+id/tv_service" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="12:21"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_time"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_date" />


                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#EEE"
                    app:layout_constraintTop_toBottomOf="@+id/tv_time" />

                <TextView
                    android:id="@+id/tv_header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="Имя клиента"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="Иванов Иван Иванович"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_name" />

                <TextView
                    android:id="@+id/tv_header_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="Телефон"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="88005553535"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_phone" />

                <TextView
                    android:id="@+id/tv_header_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Комментарий клиента"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_comment">



                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:text="Дверной звонок не работает, наберите по указанному телефону"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                        app:layout_constraintTop_toBottomOf="@+id/tv_header_phone" />
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#EEE"
                    app:layout_constraintTop_toBottomOf="@+id/cv_comment"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/tv_header_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="Цена"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="3500 рублей"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_header_street"
                    app:layout_constraintTop_toBottomOf="@+id/tv_header_price" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_call_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Позвонить"
        app:backgroundTint="#869caf"
        android:layout_marginStart="8dp"
        app:icon="@drawable/ic_baseline_phone_24"
        app:layout_constraintBottom_toTopOf="@+id/mb_find_on_map"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_find_on_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="На карте"
        app:backgroundTint="#869caf"
        android:layout_marginBottom="8dp"
        app:icon="@drawable/ic_baseline_map_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mb_call_client"
        app:layout_constraintStart_toStartOf="@+id/mb_call_client" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_accept"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="0dp"
        android:singleLine="true"
        android:text="Принять заказ"
        android:textSize="10sp"
        android:visibility="gone"

        app:icon="@drawable/ic_baseline_delivery_dining_24"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="@+id/mb_find_on_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mb_call_client"
        app:layout_constraintTop_toTopOf="@+id/mb_call_client" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_complete"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:textSize="10sp"
        android:textAlignment="viewStart"
        android:text="Доставлен"
        android:singleLine="true"

        app:icon="@drawable/ic_baseline_done_24"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="@+id/mb_find_on_map"
        app:layout_constraintEnd_toStartOf="@+id/mb_cancel"
        app:layout_constraintStart_toEndOf="@+id/mb_call_client"
        app:layout_constraintTop_toTopOf="@+id/mb_call_client" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_cancel"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:backgroundTint="#ed5e68"
        app:icon="@drawable/ic_baseline_clear_24"
        app:iconGravity="top"
        android:singleLine="true"
        android:textSize="10sp"
        android:text="отменить"
        app:layout_constraintStart_toEndOf="@id/mb_complete"
        app:layout_constraintBottom_toBottomOf="@+id/mb_complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mb_complete" />




</androidx.constraintlayout.widget.ConstraintLayout>